<% content_for(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @follow_users.any? %>
        <div class="user_avatars">
          <% @follow_users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @follow_users.any? %>
      <ul class="users follow">
        <%= render @follow_users %>
      </ul>
      <%= will_paginate @follow_users %>
    <% end %>
  </div>
</div>